{
  "compilerOptions": {
    /* Basic Options */
    "target": "es2017",
    "module": "commonjs",
    "jsx": "react-native",
    "lib": ["es2017", "esnext.asynciterable"],
    "strict": false,
    "esModuleInterop": true,
    "rootDir": ".",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": false,
    "noUnusedLocals": true,
    "skipLibCheck": false,
    "baseUrl": ".",
    "typeRoots": ["./@types", "./node_modules/@types"],
    "paths": {
      "@assets/*": ["./src/assets/*"],
      "@images/*": ["./src/assets/images/*"],
      "@common/*": ["./src/common/*"],
      "@components/*": ["./src/components/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@layouts/*": ["./src/layouts/*"],
      "@redux": ["./src/redux"],
      "@redux/*": ["./src/redux/*"],
      "@routes": ["./src/routes"],
      "@routes/*": ["./src/routes/*"],
      "@screens/*": ["./src/screens/*"],
      "@services": ["./src/services"],
      "@services/*": ["./src/services/*"],
      "@typings": ["./src/typings"],
      "@designs/*": ["./src/designs/*"],
      "@navigator": ["./src/navigator"],
      "@fragments": ["./src/fragments"],
      "@apiCaller": ["./src/apiCaller.ts"]
    }
  },
  "exclude": ["babel.config.js", "metro.config.js", "jest.config.js"]
}
